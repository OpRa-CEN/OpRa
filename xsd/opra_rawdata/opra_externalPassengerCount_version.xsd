			<xsd:group ref="VehicleLoadEntryGroup"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:complexType name="ExternalPassengerCounts_RelStructure">
		<xsd:annotation>
			<xsd:documentation>A collection of one or more ExternalPassengerCounts.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element ref="ExternalPassengerCount" maxOccurs="unbounded">
