	<xsd:simpleType name="LateDatedVehicleJourneyIdType">
		<xsd:annotation>
			<xsd:documentation>Identifier type for LATE DATED VEHICLE JOURNEY.</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="LoggableObjectIdType"/>
	</xsd:simpleType>
	<xsd:complexType name="LateDatedVehicleJourneyRefStructure">
		<xsd:annotation>
			<xsd:documentation>Reference to a LATE DATED VEHICLE JOURNEY.</xsd:documentation>
		</xsd:annotation>
		<xsd:simpleContent>
			<xsd:restriction base="LoggableObjectRefStructure">
				<xsd:attribute name="ref" type="LateDatedVehicleJourneyIdType" use="required"/>
			</xsd:restriction>
		</xsd:simpleContent>
	</xsd:complexType>
	<!-- ======================================================================= -->
	<xsd:element name="LateDatedVehicleJourney">
		<xsd:annotation>
			<xsd:documentation>Implementation of LOGGABLE OBJECT designed for recording LATE DATED VEHICLE JOURNEY information.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:restriction base="LateDatedVehicleJourney_VersionStructure">
					<xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="netex:EntityInVersionGroup" minOccurs="0"/>
						</xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="netex:DataManagedObjectGroup"/>
						</xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="LateDatedVehicleJourneyGroup"/>
						</xsd:sequence>
					</xsd:sequence>
					<xsd:attribute name="id" type="LateDatedVehicleJourneyIdType"/>
				</xsd:restriction>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<xsd:complexType name="LateDatedVehicleJourney_VersionStructure">
		<xsd:annotation>
			<xsd:documentation>Type for a LOGGABLE OBJECT designed for recording DATED VEHICLE JOURNEY information.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="LoggableObject_VersionStructure">
				<xsd:sequence>
					<xsd:group ref="LateDatedVehicleJourneyGroup"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:group name="LateDatedVehicleJourneyGroup">
		<xsd:annotation>
			<xsd:documentation>Elements for a general LOG ENTRY.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:group ref="siri:LineIdentityGroup"/>
			<xsd:element name="OperatorRef" type="siri:OperatorRefStructure" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Reference to the OPERATOR of the DATED VEHICLE JOURNEY to cancel</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:choice>
				<xsd:element name="FramedVehicleJourneyRef" type="siri:FramedVehicleJourneyRefStructure">
					<xsd:annotation>
						<xsd:documentation>Identifer of a VEHICLE JOURNEY within data Horizon of a service.</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
				<xsd:element name="DatedVehicleJourneyRef" type="siri:DatedVehicleJourneyRefStructure">
					<xsd:annotation>
						<xsd:documentation>Reference to a dated VEHICLE JOURNEY. This will be 'framed' i.e. be with the data context of the ESTIMATED Timetable.
DEPRECATED from SIRI 2.0</xsd:documentation>
					</xsd:annotation>
				</xsd:element>
			</xsd:choice>
			<xsd:element name="DatedVehicleJourneyIndirectRef" type="siri:DatedVehicleJourneyIndirectRefStructure" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Additionally, identify the VEHICLE JOURNEY by origin and destination and the scheduled times at these stops.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="recordings" type="LateDatedVehicleJourneyLogEntries_RelStructure" minOccurs="0"/>
			<xsd:group ref="siri:LineIdentityGroup"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:complexType name="LateDatedVehicleJourneys_RelStructure">
		<xsd:annotation>
			<xsd:documentation>A collection of one or more LateDatedVehicleJourneys.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element ref="LateDatedVehicleJourney" maxOccurs="unbounded">
				<xsd:annotation>
					<xsd:documentation>LOGGABLE OBJECT designed for recording DATED VEHICLE JOURNEY information.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="LateDatedVehicleJourneyLogEntry" type="LateDatedVehicleJourneyLogEntry_Structure"/>
	<xsd:complexType name="LateDatedVehicleJourneyLogEntry_Structure">
		<xsd:complexContent>
			<xsd:extension base="netex:LogEntry_VersionStructure">
				<xsd:group ref="LateDatedVehicleJourneyLogEntryGroup"/>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:group name="LateDatedVehicleJourneyLogEntryGroup">
		<xsd:annotation>
			<xsd:documentation>Elements for LOG ENTRY related to a DatedJourney.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="SituationRef" type="siri:SituationSimpleRefStructure" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>Reference to a SITUATION providing further information about the LOG ENTRY.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="Delay" type="siri:DurationType"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:complexType name="LateDatedVehicleJourneyLogEntries_RelStructure">
		<xsd:annotation>
			<xsd:documentation>A collection of one or more CancelledDatedVehicleJourneys.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="LogEntry" type="LateDatedVehicleJourneyLogEntry_Structure" maxOccurs="unbounded">
				<xsd:annotation>
					<xsd:documentation>LOGGABLE OBJECT designed for recording DATED VEHICLE JOURNEY information.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
</xsd:schema>