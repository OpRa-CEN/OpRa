	<xsd:element name="VehicleLoadEntry" type="VehicleLoadEntry_Structure"/>
	<xsd:complexType name="VehicleLoadEntry_Structure">
		<xsd:complexContent>
			<xsd:extension base="netex:LogEntry_VersionStructure">
				<xsd:group ref="VehicleLoadEntryGroup"/>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:group name="VehicleLoadEntryGroup">
		<xsd:annotation>
			<xsd:documentation>Dynamic (may change in each state) elements for a MeasurePassengerCount. (as a LOG ENTRY)</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element ref="netex:TimebandRef" minOccurs="0"/>
			<xsd:element name="NumberOfAlighters" type="netex:NumberOfPassengers" minOccurs="0"/>
			<xsd:element name="NumberOfBoarders" type="netex:NumberOfPassengers" minOccurs="0"/>
			<xsd:element name="OnboardCount" type="netex:NumberOfPassengers" minOccurs="0"/>
			<xsd:element name="OnboardPercentage" type="netex:PercentageType" minOccurs="0"/>
			<xsd:element name="VehicleWeight" type="netex:WeightType" minOccurs="0"/>
		</xsd:sequence>
	</xsd:group>
	<xsd:complexType name="VehicleLoadEntries_RelStructure">
		<xsd:sequence>
			<xsd:element name="LogEntry" type="VehicleLoadEntry_Structure" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:group name="EstimatedVehicleLoadEntryGroup">
		<xsd:sequence>
			<xsd:group ref="VehicleLoadEntryGroup"/>
			<xsd:element name="Maximums" minOccurs="0">
				<xsd:complexType>
					<xsd:group ref="VehicleLoadEntryGroup"/>
				</xsd:complexType>
			</xsd:element>
			<xsd:element name="Minimums" minOccurs="0">
				<xsd:complexType>
					<xsd:group ref="VehicleLoadEntryGroup"/>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:group>
