			<xsd:group ref="EstimatedVehicleLoadEntryGroup"/>
			<xsd:element name="history" type="AggregatedOnboardDeviceBasedPassengerCounts_RelStructure" minOccurs="0"/>
		</xsd:sequence>
	</xsd:group>
