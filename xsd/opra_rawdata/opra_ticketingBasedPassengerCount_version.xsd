    <xsd:simpleType name="TicketingBasedPassengerCountIdType">
        <xsd:restriction base="LoggableObjectIdType" />
    </xsd:simpleType>
    <xsd:complexType name="TicketingBasedPassengerCountRefStructure">
        <xsd:simpleContent>
            <xsd:restriction base="LoggableObjectRefStructure">
                <xsd:attribute name="ref" type="TicketingBasedPassengerCountIdType" use="required" />
            </xsd:restriction>
        </xsd:simpleContent>
    </xsd:complexType>
    <xsd:group name="TicketingScopeGroup">
        <xsd:sequence>
            <xsd:element name="PassengerTravelEntryType" type="PassengerTravelEntryTypeEnumeration" minOccurs="0" />
            <xsd:element name="TicketValidatorEquipmentRef" type="netex:TicketValidatorEquipmentRefStructure" minOccurs="0" />
            <xsd:element name="FareProductRef" type="netex:FareProductRefStructure" minOccurs="0" />
        </xsd:sequence>
    </xsd:group>
    <!-- ======================================================================= -->
    <xsd:element name="TicketingBasedPassengerCount" substitutionGroup="LoggableObject_">
        <xsd:annotation>
            <xsd:documentation>Implementation of LOGGABLE OBJECT designed for recording TICKETING BASED PASSENGER COUNT information.</xsd:documentation>
        </xsd:annotation>
        <xsd:complexType>
            <xsd:complexContent>
                <xsd:restriction base="TicketingBasedPassengerCount_VersionStructure">
                    <xsd:sequence>
                        <xsd:sequence>
                            <xsd:group minOccurs="0" ref="netex:EntityInVersionGroup" />
                        </xsd:sequence>
                        <xsd:sequence>
                            <xsd:group ref="netex:DataManagedObjectGroup" />
                        </xsd:sequence>
                        <xsd:sequence>
                            <xsd:group ref="LoggableObjectGroup" />
                        </xsd:sequence>
                        <xsd:sequence>
                            <xsd:group ref="TicketingBasedPassengerCountGroup" />
                        </xsd:sequence>
                    </xsd:sequence>
                    <xsd:attribute name="id" type="TicketingBasedPassengerCountIdType" />
                    <!--SHOULD BE TicketingBasedPassengerCount-->
                </xsd:restriction>
            </xsd:complexContent>
        </xsd:complexType>
    </xsd:element>
    <xsd:complexType name="TicketingBasedPassengerCount_VersionStructure">
        <xsd:annotation>
            <xsd:documentation>Type for a LOGGABLE OBJECT designed for recording DATED VEHICLE JOURNEY information.</xsd:documentation>
        </xsd:annotation>
        <xsd:complexContent>
            <xsd:extension base="LoggableObject_VersionStructure">
                <xsd:sequence>
                    <xsd:group ref="TicketingBasedPassengerCountGroup" />
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:group name="TicketingBasedPassengerCountGroup">
        <xsd:annotation>
            <xsd:documentation>Static (same in each state) elements for a CancelledDatedVehicleJourney (as a LOGGABLE OBJECT)</xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
            <xsd:group ref="PtScopeGroup" />
            <xsd:group ref="TicketingScopeGroup" />
            <xsd:group ref="VehicleLoadEntryGroup" />
            <xsd:element name="validationEntryRefs" type="ValidationEntryRefs_RelStructure" minOccurs="0" />
            <xsd:element name="history" type="AggregatedTicketingBasedPassengerCounts_RelStructure" minOccurs="0" />
        </xsd:sequence>
    </xsd:group>
    <xsd:complexType name="TicketingBasedPassengerCounts_RelStructure">
        <xsd:annotation>
            <xsd:documentation>A collection of one or more CancelledDatedVehicleJourneys.</xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
            <xsd:element ref="TicketingBasedPassengerCount" maxOccurs="unbounded">
                <xsd:annotation>
                    <xsd:documentation>LOGGABLE OBJECT designed for recording DATED VEHICLE JOURNEY information.</xsd:documentation>
                </xsd:annotation>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:element name="AggregatedTicketingBasedPassengerCount" type="AggregatedTicketingBasedPassengerCount_Structure" />
    <xsd:complexType name="AggregatedTicketingBasedPassengerCount_Structure">
        <xsd:complexContent>
            <xsd:extension base="netex:LogEntry_VersionStructure">
                <xsd:group ref="AggregatedTicketingBasedPassengerCountGroup" />
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:group name="AggregatedTicketingBasedPassengerCountGroup">
        <xsd:annotation>
            <xsd:documentation>Dynamic (may change in each state) elements for a CancelledDatedVehicleJourney (as a LOG ENTRY)</xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
            <xsd:group ref="VehicleLoadEntryGroup" />
            <xsd:element name="validationEntryRefs" type="ValidationEntryRefs_RelStructure" minOccurs="0" />
        </xsd:sequence>
    </xsd:group>
    <xsd:complexType name="AggregatedTicketingBasedPassengerCounts_RelStructure">
        <xsd:sequence>
            <xsd:element name="LogEntry" type="AggregatedTicketingBasedPassengerCount_Structure" maxOccurs="unbounded" />
        </xsd:sequence>
    </xsd:complexType>
