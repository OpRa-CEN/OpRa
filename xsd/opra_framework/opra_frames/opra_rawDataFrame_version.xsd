	<!-- ======================================================================= -->
	<xsd:simpleType name="RawDataFrameIdType">
		<xsd:annotation>
			<xsd:documentation>Type for identifier of a OpRa FRAME.</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="netex:VersionFrameIdType"/>
	</xsd:simpleType>
	<xsd:element name="RawDataFrameRef" type="RawDataFrameRefStructure" abstract="false" substitutionGroup="netex:VersionFrameRef">
		<xsd:annotation>
			<xsd:documentation>Reference to an OpRa FRAME.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	<xsd:complexType name="RawDataFrameRefStructure" abstract="false">
		<xsd:annotation>
			<xsd:documentation>Type for a reference to a OpRa FRAME.</xsd:documentation>
		</xsd:annotation>
		<xsd:simpleContent>
			<xsd:restriction base="netex:VersionFrameRefStructure">
				<xsd:attribute name="ref" type="RawDataFrameIdType" use="required"/>
			</xsd:restriction>
		</xsd:simpleContent>
	</xsd:complexType>
	<!-- ======================================================================= -->
	<xsd:element name="RawDataFrame" abstract="false" substitutionGroup="netex:CommonFrame">
		<xsd:annotation>
			<xsd:documentation>A coherent set of OpRa data to which the same frame VALIDITY CONDITIONs have been assigned.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:restriction base="RawDataVersionFrameStructure">
					<xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="netex:EntityInVersionGroup" minOccurs="0"/>
						</xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="netex:DataManagedObjectGroup"/>
						</xsd:sequence>
						<xsd:sequence>
							<xsd:group ref="netex:VersionFrameGroup"/>
						</xsd:sequence>
						<xsd:sequence>
							<xsd:element name="preparedness"/>
							<xsd:group ref="RawDataFrameGroup"/>
						</xsd:sequence>
					</xsd:sequence>
					<xsd:attribute name="id" type="RawDataFrameIdType"/>
				</xsd:restriction>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>
	<xsd:complexType name="RawDataVersionFrameStructure" abstract="false">
		<xsd:annotation>
			<xsd:documentation>Type for a OpRa VERSION FRAME.</xsd:documentation>
		</xsd:annotation>
		<xsd:complexContent>
			<xsd:extension base="netex:Common_VersionFrameStructure">
				<xsd:sequence>
					<xsd:element name="preparedness"/>
					<xsd:group ref="RawDataFrameGroup"/>
				</xsd:sequence>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	<xsd:group name="RawDataFrameGroup">
		<xsd:annotation>
			<xsd:documentation>Elements for a OpRa RAW DATA FRAME.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:group ref="RawDataInFrameGroup"/>
		</xsd:sequence>
	</xsd:group>
	<!-- ======================================================================= -->
	<xsd:group name="RawDataInFrameGroup">
		<xsd:annotation>
			<xsd:documentation>OpRa related elements in frame.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="generalLogEntries" type="GeneralLogEntries_RelStructure" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>General LOG ENTRies in frame.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="cancelledDatedVehicleJourneys" type="CancelledDatedVehicleJourneys_RelStructure" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>DATED JOURNEY informations in frame.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="lateDatedVehicleJourneyCounts" type="LateDatedVehicleJourneyCounts_RelStructure" minOccurs="0"/>
			<xsd:element name="validationEntries" type="ValidationEntries_RelStructure" minOccurs="0"/>
			<xsd:element name="ticketingBasedPassengerCounts" type="TicketingBasedPassengerCounts_RelStructure" minOccurs="0"/>
			<xsd:element name="onboardDeviceBasedPassengerCounts" type="OnboardDeviceBasedPassengerCounts_RelStructure" minOccurs="0"/>
		</xsd:sequence>
	</xsd:group>
	<!-- ======================================================================= -->
</xsd:schema>